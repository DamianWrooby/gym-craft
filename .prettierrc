{
    "useTabs": false,
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 100,
    "bracketSameLine": true,
    "plugins": ["prettier-plugin-svelte"],
    "pluginSearchDirs": ["."],
    "overrides": [
        { "files": "*.svelte", "options": { "parser": "svelte" } },
        {
            "files": "*.prisma",
            "options": {
                "parser": "prisma"
            }
        }
    ]
}
